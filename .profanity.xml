    <highlight fg='c0c0c0'>^\[.*?\](?:>|&gt;).*$</highlight>
    <highlight fg='c0c0c0'>\([0-9][0-9]\:[0-9][0-9]\:[0-9][0-9]\)$</highlight>
    <highlight fg='00ff00'>^\[DRPrime\]</highlight>
    <highlight fg='ffff00'>^\[code\]</highlight>
